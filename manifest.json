{
  "manifest_version": 2,
  "name": "Drop Feeds",
  "description": "Displays a sidebar that lets you manage your RSS feeds in a folder tree view",
  "version": "0.5.3",
  "applications": {
    "gecko": {
      "id": "{42d52ade-6923-4f20-92d1-8db031269cc6}",
      "strict_min_version": "56.0"
    }
  },

  "icons": {
    "32": "resources/img/drop-feeds-32.png",
    "48": "resources/img/drop-feeds-48.png",
    "96": "resources/img/drop-feeds-96.png"
  },

  "sidebar_action": {
    "default_icon": "resources/img/drop-feeds-32.png",
    "default_title" : "Drop Feeds",
    "default_panel": "html/sidebar.html"
  },


  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      }
    }
  },

  "browser_action": {
    "default_icon": "resources/img/drop-feeds-32.png"
  },

  "page_action": {
    "browser_style": true,
    "default_icon": "resources/themes/dauphine/img/subscribe.png",
    "default_title": "Subscribe with Drop feed",
    "default_popup": "html/subscribe.html"
  },

  "background": {
    "scripts": ["js/independent/background.js"]
  },

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["js/independent/content-script.js"],
    "run_at": "document_end"
  }],

  "options_ui": {
    "page": "html/options.html",
    "browser_style": true
  },

  "permissions": [
    "<all_urls>",
    "webRequest",
    "bookmarks",
    "menus",
    "contextMenus",
    "storage",
    "downloads",
    "tabs",
    "notifications",
    "history"
  ]
}
